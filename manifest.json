{
  "manifest_version": 3,
  "name": "New Line Guide",
  "version": "1.1.0",
  "description": "Shows a helpful guide 'new line = shift + enter' next to text input forms",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
