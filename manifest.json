{
  "manifest_version": 3,
  "name": "New Line Guide",
  "version": "1.0.9",
  "description": "Shows a helpful guide 'new line = shift + enter' next to text input forms",
  "permissions": ["storage"],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
